<LinearLayout
xmlns:a="http://schemas.android.com/apk/res/android"
a:layout_width="match_parent"
a:layout_height="match_parent"
a:orientation="vertical"
>

<TextView
style="@style/wrapContent"
a:text="Nothing to see here."
/>


        <!-- Month -->
        <NumberPicker
            a:id="@+id/month"
            a:layout_width="80dip"
            a:layout_height="wrap_content"
            a:layout_marginLeft="1dip"
            a:layout_marginRight="1dip"
            a:layout_marginStart="1dip"
            a:layout_marginEnd="1dip"
            a:focusable="true"
            a:focusableInTouchMode="true"
            />
        <!-- Day -->
        <NumberPicker
            a:id="@+id/day"
            a:layout_width="80dip"
            a:layout_height="wrap_content"
            a:layout_marginLeft="1dip"
            a:layout_marginRight="1dip"
            a:layout_marginStart="1dip"
            a:layout_marginEnd="1dip"
            a:focusable="true"
            a:focusableInTouchMode="true"
            />
