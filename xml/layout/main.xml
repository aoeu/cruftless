<LinearLayout
xmlns:_="http://schemas.android.com/apk/res/android"
_:layout_width="match_parent"
_:layout_height="match_parent"
_:orientation="vertical"
_:gravity="center_vertical"
>

<LinearLayout
xmlns:a="http://schemas.android.com/apk/res/android"
_:layout_width="match_parent"
_:layout_height="wrap_content"
_:orientation="horizontal"
_:gravity="center_horizontal"
>

<NumberPicker
_:id="@+id/month"
_:layout_width="wrap_content"
_:layout_height="wrap_content"
_:layout_marginRight="12dp"
_:layout_marginLeft="24dp"
_:focusable="true"
_:focusableInTouchMode="true"
_:theme="@style/TheOnlyWayOfStylingNumberPickerWithoutResortingToJavaReflection"
/>

<NumberPicker
_:id="@+id/day"
_:layout_width="36dp"
_:layout_height="wrap_content"
_:layout_marginLeft="12dp"
_:focusable="true"
_:focusableInTouchMode="true"
_:theme="@style/TheOnlyWayOfStylingNumberPickerWithoutResortingToJavaReflection"
/>


</LinearLayout>


<Button
_:layout_width="wrap_content"
_:layout_height="wrap_content"
_:text="submit"
_:onClick="submit"
_:background="@color/acmeTag"
_:layout_gravity="center_horizontal"
/>

</LinearLayout>
